root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 4
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

[*.md]
trim_trailing_whitespace = false

[*.{yml,yaml}]
indent_size = 2

[compose.yaml]
indent_size = 4

[*.{ts,tsx,js,jsx}]
charset = utf-8-bom

[*.{php,blade.php}]
charset = utf-8-bom
